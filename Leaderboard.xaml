<Window x:Class="WpfApp_Windows_Project2.Leaderboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Windows_Project2"
        mc:Ignorable="d"
        Title="Leaderboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListView Name="LeaderboardListView" Grid.Row="0">
            <ListViewItem>
            </ListViewItem>
            <DataGrid Name="LeaderboardDataGrid" AutoGenerateColumns="True" Height="230" Width="500">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Player" Binding="{Binding PlayerName}"/>
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ListView>
    </Grid>
</Window>
