<Window x:Class="WpfApp_Windows_Project2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Windows_Project2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        Loaded="Window_Loaded"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Grid>
        <Menu>
            <MenuItem Header="New" Click="New_MenuItem_Click"/>
            <MenuItem Header="Save" Click="Save_MenuItem_Click"/>
            <MenuItem Header="Load" Click="Load_MenuItem_Click"/>
        </Menu>
        <Canvas Name="canvas">
            <Image x:Name="previewImage" 
                   MouseLeftButtonUp="previewImage_MouseLeftButtonUp" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </Canvas>
    </Grid>
    <!--<Canvas Name="canvas">
        <Image x:Name="previewImage" MouseLeftButtonUp="previewImage_MouseLeftButtonUp"/>
    </Canvas>-->

</Window>
