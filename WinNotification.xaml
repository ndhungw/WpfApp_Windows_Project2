<Window x:Class="WpfApp_Windows_Project2.WinNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Windows_Project2"
        mc:Ignorable="d"
        Title="WinNotification" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="Congratulations on your win" FontSize="25" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold" Margin="15"/>
        <TextBlock Text="Please enter your name" FontSize="25" HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold" Margin="15"/>
        <TextBox Name="NamePlayer" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold"  Width="335" Margin="15" HorizontalContentAlignment="Center" BorderBrush="Black" BorderThickness="2"/>
        <Button Name="OKbtn" Content="OK" Click="OKbtn_Click" Height="35" Margin="20" HorizontalAlignment="Center" Width="100" />
    </StackPanel>
</Window>
